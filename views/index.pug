doctype html
html(lang='en')
  head
    title UpRoar
    include /global/head.pug
  body
    include /global/header
    .container.center
      .banner
        h1 Welcome to UpRoar
        p The Simplest Volunteer Dashboard to track your hours
        if !__authenticated
          a.btn.btn-blue(href="/auth/login") Login
          a.btn.btn-light-orange(href="/auth/sign-up") Sign Up
        if __authenticated
          a.btn(href="/") View Your Dashboard